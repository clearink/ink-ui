{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      // 这样才能识别其他子包的类型
      "@comps": ["../components/src"],
      "@comps/*": ["../components/src/*"],
      "@icons": ["../icons/src"],
      "@icons/*": ["../icons/src/*"],
      "@validator": ["../validator/src"],
      "@validator/*": ["../validator/src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
